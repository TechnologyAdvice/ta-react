{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react",
    "allowJs": false,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "strict": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "declaration": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist",
    "pretty": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "./src",
    "./types"
  ]
}
